<%= form_with(model: movie, local: true, html: { class: 'form-container' }) do |form| %>
  <% if movie.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(movie.errors.count, "error") %> Prevented the film from being saved:</h4>
      <ul>
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Title", class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter the title' %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :category, "Category", class: 'form-label' %>
      <%= form.select :category, Movie::CATEGORIES, { include_blank: 'select the class' }, class: 'form-select' %>
      <div class="form-text text-muted">Please select a category</div>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :country, "Country", class: 'form-label' %>
      <%= form.select :country, Movie::COUNTRIES, { include_blank: 'Select the country' }, class: 'form-select' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :release_year, "Release Year", class: 'form-label' %>
      <%= form.number_field :release_year, class: 'form-control', min: 1900, max: Date.today.year, placeholder: 'e.g. 2024' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :average_rating, "rating (0-5)", class: 'form-label' %>
      <%= form.number_field :average_rating, class: 'form-control', min: 0, max: 5, step: 0.1, placeholder: '0.0 - 5.0' %>
    </div>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Description", class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: 4, placeholder: 'Enter the description' %>
  </div>

  <div class="d-flex gap-2 justify-content-end">
    <%= link_to 'Cancel', movies_path, class: 'btn btn-outline-light' %>
    <%= form.submit class: 'btn btn-custom' %>
  </div>
<% end %>
