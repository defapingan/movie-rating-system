<div class="movies-page">
  <div class="container">
    <div class="page-header">
      <h1 class="display-5 fw-bold"><%= @movie.title %></h1>
      <p class="subtitle">Movie details</p>
    </div>

    <div class="card movie-card">
      <div class="card-body">
        <p><strong>Category:</strong> <%= @movie.category %></p>
        <p><strong>Country:</strong> <%= @movie.country %></p>
        <p><strong>Release Year:</strong> <%= @movie.release_year %></p>
        <p><strong>Rating:</strong> <%= @movie.average_rating || 0 %> / 5</p>

        <% if @movie.description.present? %>
          <hr>
          <p><%= @movie.description %></p>
        <% end %>
      </div>

      <div class="card-footer d-flex gap-2">
        <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-outline-primary" %>
        <%= link_to "Back", movies_path, class: "btn btn-outline-light" %>
      </div>
    </div>
  </div>
</div>